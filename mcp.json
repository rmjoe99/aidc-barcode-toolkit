{
  "name": "aidc-barcode-toolkit",
  "displayName": "AIDC Barcode Toolkit MCP",
  "version": "1.0.0",
  "description": "Professional barcode/QR generation, GS1 validation & thermal printing via Model Context Protocol",
  "author": {
    "name": "Joseph Rwanda",
    "email": "josephrwanda9@gmail.com",
    "url": "https://josephrwanda.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rmjoe99/aidc-barcode-toolkit"
  },
  "homepage": "https://github.com/rmjoe99/aidc-barcode-toolkit",
  "bugs": {
    "url": "https://github.com/rmjoe99/aidc-barcode-toolkit/issues"
  },
  "keywords": [
    "mcp",
    "barcode",
    "qr-code",
    "gs1",
    "gtin",
    "thermal-printer",
    "ean",
    "upc",
    "warehouse",
    "inventory",
    "aidc"
  ],
  "mcpServer": {
    "command": "node",
    "args": ["packages/mcp/mcp-server.js"],
    "env": {}
  },
  "tools": [
    {
      "name": "generate_barcode",
      "description": "Generate professional barcode images (EAN-13, UPC-A, Code 128, Code 39, ITF-14, or QR codes)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string",
            "description": "Data to encode in the barcode"
          },
          "format": {
            "type": "string",
            "enum": ["EAN13", "UPCA", "CODE128", "CODE39", "ITF14", "QR"],
            "description": "Barcode format to generate"
          },
          "width": {
            "type": "number",
            "description": "Barcode width in pixels (default: 400)"
          },
          "height": {
            "type": "number",
            "description": "Barcode height in pixels (default: 150)"
          },
          "output": {
            "type": "string",
            "description": "Output file path for the generated barcode"
          }
        },
        "required": ["data"],
        "additionalProperties": false
      }
    },
    {
      "name": "generate_qr",
      "description": "Generate QR codes with configurable error correction levels",
      "inputSchema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string",
            "description": "Data to encode (URL, text, contact info, etc)"
          },
          "ecc": {
            "type": "string",
            "enum": ["L", "M", "Q", "H"],
            "description": "Error correction level: L (~7% recovery), M (~15%), Q (~25%), H (~30%)"
          },
          "size": {
            "type": "number",
            "description": "QR code size in pixels (default: 400)"
          },
          "output": {
            "type": "string",
            "description": "Output file path for the generated QR code"
          }
        },
        "required": ["data"],
        "additionalProperties": false
      }
    },
    {
      "name": "validate_gtin",
      "description": "Validate GTIN check digits (EAN-8, EAN-13, UPC-A, etc) and identify code type",
      "inputSchema": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "GTIN code to validate (8-14 digits)"
          }
        },
        "required": ["code"],
        "additionalProperties": false
      }
    },
    {
      "name": "parse_gs1",
      "description": "Parse GS1 Application Identifiers from barcode data strings",
      "inputSchema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string",
            "description": "GS1 formatted data string with AIs"
          }
        },
        "required": ["data"],
        "additionalProperties": false
      }
    },
    {
      "name": "generate_thermal_printer",
      "description": "Generate thermal printer commands (Zebra ZPL, ESC/POS, TSPL) for label printing",
      "inputSchema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string",
            "description": "Data to print on label"
          },
          "format": {
            "type": "string",
            "enum": ["ZPL", "ESC_POS", "TSPL"],
            "description": "Thermal printer command language"
          },
          "printerModel": {
            "type": "string",
            "description": "Printer model (e.g., ZEBRA_GK420, TSC_TTP244)"
          }
        },
        "required": ["data"],
        "additionalProperties": false
      }
    }
  ],
  "capabilities": {
    "tools": true,
    "resources": false,
    "prompts": false
  },
  "registryMetadata": {
    "category": "productivity",
    "subcategories": ["barcode", "data-validation", "printing"],
    "supportedPlatforms": ["Node.js 14+"],
    "requiredEnv": []
  }
}
